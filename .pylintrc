[MASTER]
# Use multiple processes to speed up Pylint
jobs=0

[MESSAGES CONTROL]
# Enable useful checks
enable=unused-import,missing-final-newline,trailing-newlines,wrong-import-position

# Disable checks that are too strict for this project
disable=
    too-many-lines,
    protected-access,
    too-few-public-methods,
    missing-module-docstring,

[FORMAT]
# Maximum number of characters on a single line
max-line-length=100

# Expected format of line ending
expected-line-ending-format=LF

# Regexp for a line that is allowed to be longer than the limit
ignore-long-lines=^\s*(# )?<?https?://\S+>?$

# Number of spaces of indent required inside a hanging or continued line
indent-after-paren=4

# String used as indentation unit
indent-string='    '

[BASIC]
# Good variable names which should always be accepted
good-names=i,j,k,e,_,f,df,logger,config

# Bad variable names which should always be refused
bad-names=foo,bar,baz,toto,tutu,tata

# Include a hint for the correct naming format with invalid-name
include-naming-hint=yes

# Ignore protected-access warnings for test files
ignore-patterns=^tests/

# Regular expression matching correct function names
function-rgx=[a-z_][a-z0-9_]{2,30}$

# Regular expression matching correct variable names
variable-rgx=[a-z_][a-z0-9_]{2,30}$

# Regular expression matching correct constant names
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

# Regular expression matching correct attribute names
attr-rgx=[a-z_][a-z0-9_]{2,30}$

# Regular expression matching correct argument names
argument-rgx=[a-z_][a-z0-9_]{2,30}$

# Regular expression matching correct class attribute names
class-attribute-rgx=([A-Za-z_][A-Za-z0-9_]{2,30}|(__.*__))$

# Regular expression matching correct class names
class-rgx=[A-Z][a-zA-Z0-9]*$

# Regular expression matching correct module names
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$

# Regular expression matching correct method names
method-rgx=[a-z_][a-z0-9_]{2,30}$

[TYPECHECK]
# Tells whether missing members accessed in mixin class should be ignored
ignore-mixin-members=yes

# List of module names for which member attributes should not be checked
ignored-modules=cv2,tree_sitter

# List of classes names for which member attributes should not be checked
ignored-classes=optparse.Values,thread._local,_thread._local

# List of decorators that produce context managers
contextmanager-decorators=contextlib.contextmanager

[DESIGN]
# Maximum number of public methods for a class
# Increased limit to accommodate test classes
max-public-methods=50

# Maximum number of arguments for function / method
max-args=8

# Maximum number of local variables for function / method body
max-locals=20

# Maximum number of return / yield for function / method body
max-returns=6

# Maximum number of branch for function / method body
max-branches=15

# Maximum number of statements in function / method body
max-statements=50

# Maximum number of attributes for a class
max-attributes=12

# Maximum number of positional arguments for function / method
max-positional-arguments=6
